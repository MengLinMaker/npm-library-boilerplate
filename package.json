{
  "name": "@menglinmaker/npm-library-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate for creating NPM library with CJS, ESM and DTS output. Complete with CICD pipeline and docs.",
  "main": "dist/index.cjs",
  "typings": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "scripts": {
    "lint": "eslint -c config/* && prettier --write .",
    "test": "vitest -c config/vitest.config.mts",
    "build": "rimraf dist && rollup --config config/rollup.config.mjs && pnpm run lint && pnpm link .",
    "docs:dev": "vitepress dev",
    "docs:build": "vitepress build",
    "docs:preview": "vitepress preview"
  },
  "repository": "https://github.com/MengLinMaker/npm-library-boilerplate.git",
  "keywords": [
    "boilerplate",
    "npm",
    "library"
  ],
  "author": "Meng Lin <menglinmaker@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MengLinMaker/npm-library-boilerplate/issues"
  },
  "homepage": "https://github.com/MengLinMaker/npm-library-boilerplate#readme",
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@eslint/js": "^9.6.0",
    "@vitest/coverage-v8": "^2.0.2",
    "eslint": "^9.6.0",
    "prettier": "^3.3.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.18.1",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "typescript-eslint": "^7.16.0",
    "vitepress": "^1.3.0",
    "vitest": "^2.0.2",
    "test-package": "file:"
  }
}
